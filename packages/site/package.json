  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "contentlayer2 build && yarn build:registry && next build",
    "start": "next start",
    "lint": "next lint",
    "build:test": "yarn typecheck && yarn build:registry && next build && next start -p 3001",
    "build:registry": "npx tsx --tsconfig ./src/script/tsconfig.scripts.json ./src/script/registry-builder.ts",
    "typecheck": "contentlayer2 build && tsc --noEmit",
    "watch": "contentlayer2 dev && tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "db:sync": "drizzle-kit generate:sqlite & drizzle-kit push:sqlite",
    "db:seed": "pnpm dlx tsx lib/db/seed.ts",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "tsx lib/db/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:pull": "drizzle-kit introspect:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio â€” port 3333",
    "db:check": "drizzle-kit check:sqlite",
    "db:dev": "turso dev",
    "db:persist": "turso dev --db-file ./local.db"
  },
